<!-- Recicpe Name -->
<input
	placeholder=""
	id="name"
	type="text"
	class="validate"
	name="name"
	value="<%=recipe.name%> "
	required
/>
<label for="name">Recipe / Idea Name</label>

<!-- Ingredients -->

<textarea
	rows="8"
	cols="50"
	id="ingredients"
	class="materialize-textarea"
	name="ingredients"
	form="recipeform"
	required
>
<%=recipe.ingredients %></textarea
>

<label for="ingredients">Ingredients</label>

<!-- Instructions -->
<textarea
	rows="8"
	cols="50"
	id="instructions"
	class="materialize-textarea"
	name="instructions"
	form="recipeform"
	required
>
<%=recipe.instructions%></textarea
>
<label for="instructions">Instructions</label>

<!-- Author -->
<input
	type="hidden"
	id="author"
	name="author"
	value="<%= currentUser.username %>"
/>

<!-- Submit -->
<div>
	<button
		class="btn waves-effect waves-light"
		type="submit"
		name="action"
		id="submit-btn"
	>
		Submit
	</button>
</div>
