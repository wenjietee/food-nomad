<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
	</head>
	<body>
		<!-- Header  -->
		<h2 id="header">Welcome to Food Nomad</h1>
		<%- include('../partials/logout.ejs') %>
		<!-- Body -->
		<div class="row">
			<!-- Side Nav -->
			<div class="col s12 m4 l2" id="sidenav">
				<%- include('../partials/nav.ejs') %>
			</div>
			
			<!-- Recipe Content -->
			<div class="col s12 m8 l8" id="content">
				<% recipes.forEach(recipe => { %>
				<div>
					<div class="card blue-grey darken-1">
						<div class="card-image">
							<img src="<%= recipe.imageURL %>">
							<span class="card-title"><%= recipe.name %> </span>
						  </div>
						<div class="card-content white-text">
							<p><%= recipe.description %> </p>
						</div>
						<div class="card-action">
							<a href="/app/recipe/<%= recipe.id %>">View</a>
							<a href="/app/profile/<%= recipe.author %>">By: <%= recipe.author %></a>
						</div>
					</div>
				</div>
				<% }) %>
			</div>

			<!-- Ingredients Bulletin -->
			<div class="col s12 m4 l2" id="bulletin">
				<div class="card blue-grey darken-1">
					<div class="card-content white-text">
						<span class="card-title">We are sharing!</span>
						<p>Ingredients</p>
					</div>
					<div class="card-action">
						<a href="#">Map</a>
					</div>
				</div>
			</div>
		</div>

		<%- include('../partials/footer.ejs') %>
	</body>
</html>
