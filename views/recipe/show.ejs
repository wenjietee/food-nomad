<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
	</head>
	<body>
		<!-- Header  -->
		<h2 id="header">Recipe</h2>
		<%- include('../partials/logout.ejs') %>

		<div class="row">
			<!-- Side Nav -->
			<div class="col s12 m4 l3"><%- include('../partials/nav.ejs') %></div>
			<!-- Content -->
			<div class="col s12 m8 l9">
				<div id="recipe-content">
					<h1 id="recipe-title"><%= recipe.name %></h1>
					<img
						src="https://i.ndtvimg.com/i/2017-08/thai-curry-620x350_620x350_41502105379.jpg"
						class="image-show"
					/>
					<p id="recipe-description"><%= recipe.description %></p>
					<h6 id="recipe-author">
						By:
						<a href="/app/profile/<%= recipe.author %>"><%= recipe.author %></a>
					</h6>

					<h3 id="recipe-ingredients-header">Ingredients:</h3>
					<ul id="recipe-ingredients">
						<% recipe.ingredients.forEach(ingredient => { %>
						<li id="recipe-ingredient"><%= ingredient %></li>
						<% }) %>
					</ul>
					<h3 id="recipe-ingredients-header">Instructions:</h3>
					<p id="recipe-instructions"><%= recipe.instructions %></p>
				</div>
			</div>
		</div>
		<%- include('../partials/footer.ejs') %>
	</body>
</html>
