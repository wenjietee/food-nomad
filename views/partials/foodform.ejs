<!-- Food Name -->
<input
	placeholder=""
	id="name"
	type="text"
	class="validate"
	name="name"
	value="<%=food.name%> "
	required
/>
<label for="name">Food Name</label>

<!-- Quantity -->
<input
	id="quantity"
	type="number"
	class="validate"
	name="quantity"
	value="<%=String(food.quantity)%>"
	min="1"
	required
/>

<label for="quantity">Quantity</label>

<!-- Expiry -->
<input id="expiry" type="date" class="validate" name="expiry" value="" />

<label for="expiry">
	<% if (food.expiry !==undefined) { %> <%= `Current Expiry Date:
	${food.expiry}` %> <% } else { %><%= 'Set Expiry Date' %> <% } %>
</label>

<!-- Author -->
<input
	type="hidden"
	id="author"
	name="author"
	value="<%= currentUser.username %>"
/>

<!-- Zip Code -->
<input type="hidden" id="zip" name="zip" value="<%= currentUser.zip %>" />

<!-- Submit -->
<div>
	<button
		class="btn waves-effect waves-light"
		type="submit"
		name="action"
		id="submit-btn"
	>
		Submit
	</button>
</div>
